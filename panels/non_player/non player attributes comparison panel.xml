<panel>
	<layout class="arrange_horizontal_attachment" layout="-1,-1" offset="0" gap="10" />
	<layout class="stick_to_sides_attachment" alignment="vertical" apply_to_children="true" inset="0" />

	<!-- Coaching Table -->
	<widget class="table" id="npct" mode="fill_rows, stripe_rows, printable" layout="-1, 30, -1, 30" row_height="24" row_spacing="0">
		<list id="headings">
			<record alignment="left,centre_y" column_span="4" hide_sorting="true" disabled="true">
				<translation id="text" translation_id="230043" type="use" value="Coaching" />
			</record>
		</list>
		<list id="column_table_properties">
			<!-- Attribute name -->
			<record index="0" id="name" left="8" top="4">
				<record id="widget_info" class="text" alignment="left,centre_y" multiline="false"/>
			</record>
			<!-- Attribute value -->
			<record index="1" id="val " sort_disabled="true" column_alignment="centre" right="8">
				<record id="widget_info" class="attribute_label" alignment="right,centre_y" style="semi_bold" multiline="false"/>
				<record id="widget_info" class="attribute_label" alignment="centre,can_scale" colour="white" font="label" size="12" use_attribute_colour_as_bg="true" appearance="boxes/custom/attributes/paper"/>
			</record>
			<!-- Attribute comparison as a bar -->
			<record index="2" id="cbar" sort_disabled="true" left="2" right="2" top="2" bottom="2">
				<!--the positive/negative stuff is not a typo!!!-->
				<record id="widget_info" class="horizontal_split_value_bar" negative_colour="comp person bar 1" positive_colour="comp person bar 2" max_value="19" min_value="-19" />
			</record>
			<!-- Attribute value -->
			<record index="3" id="val2" sort_disabled="true" column_alignment="centre" right="8">
				<record id="widget_info" class="attribute_label" alignment="right,centre_y" style="semi_bold" multiline="false"/>
				<record id="widget_info" class="attribute_label" alignment="centre,can_scale" colour="white" font="label" size="12" use_attribute_colour_as_bg="true" appearance="boxes/custom/attributes/paper"/>
			</record>
		</list>
		<!-- columns should be left and right aligned respectively -->
		<list id="column_widget_properties">
			<record indx="0" alignment="left,centre_y" />
			<record indx="1" alignment="centre" style="semi_bold" />
			<record indx="2" alignment="centre" />
			<record indx="3" alignment="centre" style="semi_bold" />
		</list>
	</widget>

	<!-- Mental Table -->
	<widget class="table" id="npmt" mode="fill_rows, stripe_rows, printable" layout="-1, 30, -1, 30" row_height="24" row_spacing="0" default_sort_column="name">
		<list id="headings">
			<record alignment="left,centre_y" column_span="4" auto_size="" hide_sorting="true" disabled="true">
				<translation id="text" translation_id="230106" type="use" value="Mental" />
			</record>
		</list>
		<list id="column_table_properties">
			<!-- Attribute name -->
			<record index="0" id="name" left="8" top="4">
				<record id="widget_info" class="text" alignment="left,centre_y" multiline="false"/>
			</record>
			<!-- Attribute value -->
			<record index="1" id="val " sort_disabled="true" column_alignment="centre" right="8">
				<record id="widget_info" class="attribute_label" alignment="right,centre_y" style="semi_bold" multiline="false"/>
				<record id="widget_info" class="attribute_label" alignment="centre,can_scale" colour="white" font="label" size="12" use_attribute_colour_as_bg="true" appearance="boxes/custom/attributes/paper"/>
			</record>
			<!-- Attribute comparison as a bar -->
			<record index="2" id="cbar" sort_disabled="true" left="2" right="2" top="2" bottom="2">
				<!--the positive/negative stuff is not a typo!!!-->
				<record id="widget_info" class="horizontal_split_value_bar" negative_colour="comp person bar 1" positive_colour="comp person bar 2" max_value="19" min_value="-19" />
			</record>
			<!-- Attribute value -->
			<record index="3" id="val2" sort_disabled="true" column_alignment="centre" right="8">
				<record id="widget_info" class="attribute_label" alignment="right,centre_y" style="semi_bold" multiline="false"/>
				<record id="widget_info" class="attribute_label" alignment="centre,can_scale" colour="white" font="label" size="12" use_attribute_colour_as_bg="true" appearance="boxes/custom/attributes/paper"/>
			</record>
		</list>
		<!-- columns should be left and right aligned respectively -->
		<list id="column_widget_properties">
			<record indx="0" alignment="left,centre_y" />
			<record indx="1" alignment="centre" style="semi_bold" />
			<record indx="2" alignment="centre" />
			<record indx="3" alignment="centre" style="semi_bold" />
		</list>
	</widget>

</panel>
