			<translation id="text" translation_id="249495" type="use" value="Tck[COMMENT tackles completed per game]" />
		</record>
		<!-- Clearances -->
		<record id="PScl" format="[%fraction#1-2.0]">
			<translation id="hint" translation_id="539021" type="use" value="Clearances[COMMENT: AREA: Player Stats; BN: 38379; TONE: Informal; NOTE; Clearances Stat]" />
