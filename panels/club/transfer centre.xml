						<container id="trop" icon="icons/16px/transfer out">
							<layout class="stick_to_sides_attachment" alignment="all" apply_to_children="true" inset="0"/>
							<translation id="title" translation_id="316759" type="use" value="Out[COMMENT - Transfer Centre; title of outgoing transfers tab; limited space for text here, 5 characters maximum]"/>

							<!-- table containing transfer offer details -->
							<widget class="table" id="trot" layout="16, 55, -14, -12, -13, -9, 135, 30, 32, 32, 32, 35" mode="select_rows, fill_rows, show_bullets, dont_allow_click_unselect_single" select_event="XrwT" auto_size_rows="true" all_content_same_height="false" fixed_size_rows="false" column_spacing="0" row_spacing="2" save_session_state="true" save_default_state="true" navigation_container="true">
                                <global id="override_select_row_flags" name="ui.is_fmt_controller_skin"/>
								<list id="headings">
									<record index="0"/>
