								</list>
							</widget>
						</container>

						<container id="trip" icon="icons/16px/transfer in">
							<layout class="stick_to_sides_attachment" alignment="all" apply_to_children="true" inset="0"/>
							<translation id="title" translation_id="316758" type="use" value="In[COMMENT - Transfer Centre; title of incoming transfers tab; limited space for text here, 5 characters maximum]"/>

							<!-- table containing transfer offer details -->
							<widget class="table" id="trit" layout="16, 55, -14, -12, -13, -9, 193, 32, 32, 1, 1, 35" mode="select_rows, select_multiple, fill_rows, show_bullets" auto_size_rows="true" all_content_same_height="false" fixed_size_rows="false" column_spacing="0" row_spacing="2" save_session_state="true" save_default_state="true" navigation_container="true">
                                <global id="override_select_row_flags" name="ui.is_fmt_controller_skin"/>
