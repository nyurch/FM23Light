<panel width="140">
	<layout class="arrange_vertical_attachment" layout="-1, 38" offset="1" gap="1"/>
	<layout class="stick_to_sides_attachment" alignment="horizontal" apply_to_children="true" inset="2"/>

	<container>
		<layout class="arrange_vertical_attachment" alignment="bottom,extend" gap="1" offset="0"/>
		<layout class="stick_to_sides_attachment" alignment="horizontal" apply_to_children="true"/>

		<container class="main_contrast_box_no_margin" red_replacement="card bg lighter" >
			<layout class="stick_to_sides_attachment" alignment="all" apply_to_children="true" inset="0"/>

			<widget class="object_portrait_picture" id="trop" scale_picture="true">
				<integer id="property" value="trop"/>
				<boolean id="keep_aspect_ratio" value="true"/>
				<boolean id="comp_use_trophy_icon" value="true"/>
				<flags id="image_alignment" value="left,bottom"/>
				<layout class="stick_to_sides_attachment" alignment="vertical" inset="0"/>
			</widget>
			<widget class="text" id="wcnt" alignment="right,bottom" colour="accent" style="bold" size="xxlarge" />

		</container>
	</container>

	<container class="main_contrast_box">
		<attachment_group class="vertical_arrange" vertical_alignment="top,extend" vertical_gap="0"/>
		<widget class="comp_button" id="cmpn" multiline="true" auto_size="vertical" alignment="centre_x,top" icon_enabled="true" font="title" style="bold" size="xxsmall"/>
	</container>

</panel>