<panel>
	<list id="properties_to_forward">
		<record get_property="tact" set_property="tact" target="pwtc"/>
		<record get_property="text" set_property="text" target="ttle"/>
	</list>

	<attachment_group class="vertical_arrange_autosize" vertical_offset="0" vertical_gap="6" horizontal_alignment="horizontal" horizontal_inset="0" />
	<container class="inner_subtle_box" draw_vertical_dividers="false">
		<attachment_group class="horizontal_arrange_vertical_autosize" horizontal_layout="220,-2" horizontal_offset="6" vertical_inset="6" />
		<container>
			<attachment_group class="vertical_arrange_autosize" vertical_alignment="top,extend" />
			<container>
				<attachment_group class="horizontal_arrange_vertical_autosize_centre" horizontal_alignment="left" horizontal_offset="0" vertical_inset="0" />
				<widget class="picture" file="icons/26px/tactics" width="26" red_replacement="fg" auto_size="vertical" image_alignment="centre" keep_aspect_ratio="true" scale_picture="false"/>
				<widget class="link_button_title" id="ttle" colour="text" red_replacement="text" section="tacO" size="medium" alignment="left,centre_y" auto_size="all">
				</widget>
			</container>
			<!-- the pitch-->

			<container height="196">
				<layout class="stick_to_sides_attachment" alignment="all" apply_to_children="true"/>

				<container>
					<layout class="stick_to_sides_attachment" alignment="all" apply_to_children="true"/>
					<widget class="picture" default_path="pictures/custom/" file="pictures/custom/report" image_alignment="top" scale_picture="true" keep_aspect_ratio="true">
					</widget>
				</container>

				<container>
					<layout class="stick_to_sides_attachment" alignment="all" apply_to_children="true" inset="0,16"/>
					<widget class="pitch_with_tactics" id="pwtc" icon_flags="dont_fade_icons" pitch_draw_grass="false" pitch_perspective="0" pitch_draw_lines="true">
						<boolean id="disable_link" value="true"/>
						<boolean id="vertical" value="true"/>
						<boolean id="pitch_dont_draw_indicators" value="false"/>
						<boolean id="pitch_draw_grass" value="false" />
						<boolean id="pitch_draw_image" value="false" />
						<string id="pitch_kit_icon" value="pitch/icons/dots"/>
					</widget>
				</container>
			</container>


		</container>
		<container>
			<attachment_group class="vertical_arrange_autosize" vertical_offset="0" vertical_gap="6" horizontal_alignment="horizontal" horizontal_inset="8" />
			<container>
				<attachment_group class="horizontal_arrange_vertical_autosize_centre" horizontal_alignment="left" horizontal_offset="0" vertical_inset="0" />
				<widget class="picture" file="icons/26px/board" width="26" red_replacement="text" auto_size="vertical" image_alignment="centre" keep_aspect_ratio="true" scale_picture="false"/>
				<widget class="link_button_title" id="clvt" colour="text" red_replacement="text" section="tcbr" size="medium" alignment="left, centre_y" auto_size="all">
					<translation id="text" translation_id="491850" type="use" value="Club Vision[COMMENT: AREA: Club vision panel; SUB-AREA: Panel heading; FR-BN: 23335; TONE: Formal; CHARLIMIT: None; REF-ID: n/a; NOTE: Title string for the club vision panel]" />
				</widget>
			</container>

			<container class="scrolling_box" height="196">
				<container id="POls" draw_horizontal_dividers="true">
					<attachment_group class="vertical_arrange_autosize" vertical_gap="12" />
					<!-- passed items added here -->
				</container>
			</container>


		</container>


	</container>
</panel>
