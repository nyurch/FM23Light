<panel>
	<attachment_group class="horizontal_arrange_vertical_autosize" horizontal_alignment="left,extend" horizontal_gap="8"/>

	<list id="properties_to_forward">
		<record get_property="disable_link" target="PerB" set_property="disable_link"/>
	</list>

	<widget class="picture" id="prop" scale_picture="true" keep_aspect_ratio="true" image_alignment="centre_x" height="45" width="45">
		<record id="object_property">
			<list id="get_properties">
				<!--Facegen data request-->
				<record get_property="fcgn"/>
				<!--Fake name request-->
				<record get_property="Pfke"/>
				<record get_property="prpc" set_property="valu"/>
			</list>
		</record>
	</widget>

	<container>
		<attachment_group class="vertical_arrange_autosize"/>

		<widget class="person_button" id="PerB" style="bold" colour="black" info_popup_enabled="true" icon_enabled="true" person_is_player="false" auto_size="all">
			<record id="object_property" get_property="objt" set_property="valu"/>
		</widget>

		<widget class="job_label" colour="faded text" auto_size="vertical">
			<record id="object_property" get_property="PcJj" set_property="valu"/>
		</widget>
	</container>
</panel>