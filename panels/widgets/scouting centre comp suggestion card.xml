<panel>
	<layout class="stick_to_sides_attachment" alignment="all" apply_to_children="true" inset="0"/>

	<container>
		<layout class="arrange_vertical_attachment" alignment="top,extend" offset="0" gap="0"/>
		<layout class="stick_to_sides_attachment" alignment="horizontal" apply_to_children="true" inset="0"/>

		<container>
			<layout class="arrange_vertical_attachment" alignment="bottom,extend" offset="0" gap="8"/>
			<layout class="stick_to_sides_attachment" alignment="horizontal" apply_to_children="true" inset="10"/>

			<container class="main_subtle_box_no_margin">
				<attachment_group class="vertical_arrange" vertical_alignment="top" vertical_offset="0" vertical_gap="0"/>
				
				<container>
					<attachment_group class="vertical_arrange_autosize_horizontal_centre" vertical_alignment="bottom" vertical_gap="8"/>
					<layout class="centre_in_parent_attachment" alignment="vertical"/>

					<widget class="object_portrait_picture" property="trop" image_alignment="centre" scale_picture="true" keep_aspect_ratio="true" height="140" width="140">
						<record id="object_property" get_property="comp" set_property="objt" />
					</widget>
					
					<widget class="comp_button" size="large" font="bold" colour="text" auto_size="all">
						<record id="object_property" get_property="comp" set_property="valu" />
					</widget>

					<widget class="client_object_property_panel" property="crps" height="20" width="100">
						<record id="object_property" get_property="comp" set_property="objt" />
					</widget>

					<widget class="spacer" height="15"/>

					<container height="50">
						<layout class="arrange_vertical_attachment" alignment="top,extend" gap="0" offset="0"/>
						<layout class="centre_in_parent_attachment" alignment="horizontal" apply_to_children="true" offset="0"/>
						<layout class="fit_children_attachment" alignment="horizontal" offset="0" gap="0"/>

						<widget class="text" alignment="centre" font="title" auto_size="all" colour="faded text">
							<translation id="text" translation_id="247161" type="use" value="Dates" />
						</widget>

						<container class="client_object_viewer_xml_panel">
							<layout class="arrange_horizontal_attachment" alignment="left" offset="0" gap="0"/>
							<layout class="fit_children_attachment" alignment="horizontal,fill" offset="0" gap="0"/>
							<layout class="stick_to_sides_attachment" alignment="top,bottom" inset="0" apply_to_children="true"/>
							<record id="object_property" get_property="comp" set_property="objt" />

							<widget class="game_formatted_label" alignment="centre" size="small" auto_size="all" format="[%date#1-long_no_day] - [%date#2-long_no_day]" colour="text">
								<record id="object_property">
									<list id="get_properties">
										<record get_property="Cstd" set_property="var1" dont_set_object="true" />
										<record get_property="Cend" set_property="var2" dont_set_object="true" />
									</list>
								</record>

								<record id="forced_formats" var1="vf_date" var2="vf_date"/>
							</widget>
						</container>
					</container>

					<widget class="spacer" height="15"/>

					<widget class="text" alignment="left,top" auto_size="all" colour="faded text">
						<record id="object_property" get_property="text" set_property="text" />
					</widget>

				</container>
			</container>

			<widget class="competition_scouting_centre_actions_panel" height="30" width="200">
				<record id="object_property">
					<list id="get_properties">
						<record>
							<integer id="get_property" value="Ttea" />
							<integer id="set_property" value="Ttea" />
						</record>
						<record>
							<integer id="get_property" value="SCei" />
							<integer id="set_property" value="SCei" />
						</record>
						<record>
							<integer id="get_property" value="Hhum" />
							<integer id="set_property" value="Hhum" />
						</record>
						<record>
							<integer id="get_property" value="comp" />
							<integer id="set_property" value="objt" />
						</record>
					</list>
				</record>
			</widget>

			<container height="10"/>
		</container>

	</container>


</panel>