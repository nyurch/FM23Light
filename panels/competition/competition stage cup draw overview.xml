<panel save_session_state="true">
	<attachment_group class="vertical_arrange" vertical_alignment="bottom,extend" vertical_offset="8"/>

	<boolean id="is_live_cup_draw_panel" value="true" />
	<boolean id="is_live_cup_draw_overview_panel" value="true" />
	<integer id="live_draw_draw_phase_timer" value="10000"/>
	<integer id="live_draw_reaction_phase_timer" value="10000"/>
	<integer id="horizontal_group_gap" value="24" />

	<set_var name="test_attachment">
		<attachment class="test_screen_size_attachment" skip_if_false="true">
			<list id="properties">
				<record>
					<flags id="alignment" value="horizontal" /><flags id="colour" value="white" />
					<integer id="min_value" value="0" />
					<integer id="max_value" value="1366" />
					<symbol id="set_property" value="width" />
					<integer id="true_value" value="0" />
					<integer id="false_value" value="0" />
				</record>
				<record min_value="1366" max_value="1440" true_value="100"/>
				<record min_value="1440" max_value="10000" true_value="100"/>
			</list>
		</attachment>
	</set_var>
	<!-- the group box that is the main container for the competition stage panel
			this container holds whatever league or cup panel we need to create -->
	<container class="main_box" id="stse" force_title_borders="true">
		<attachment_group class="horizontal_arrange" horizontal_alignment="middle,extend"/>

		<container>
			<var name="test_attachment" colour="white"/>
		</container>

		<!-- group box for stage to go into -->
		<container id="stgb">
			<layout class="stick_to_sides_attachment" alignment="all" apply_to_children="true" />

			<record id="default_properties" hidden="true" />

			<!--league stage panel-->
			<widget class="league_stage_panel" id="lspn" save_session_state="true" should_force_refresh="true" use_draw_properties="true" colour="white"/>

			<!--competition rules panel-->
			<widget class="rules_panel" id="rupa"  colour="white"/>

			<!--cup stage_panel-->
			<widget class="cup_stage_panel" id="cstp" save_session_state="true" file="competition/cup stage cup draws overview"  colour="white"/>

			<!--cup tree panel-->
			<widget class="cup_tree_panel" id="ctpn" save_session_state="true"  colour="white"/>

			<!--group stage scrolling box (to be filled in code)-->
			<widget class="scrolling_box" id="gscb" save_session_state="true" navigation_container="true" navigation_container_allow_empty="true" colour="white"/>
		</container>

		<container>
			<var name="test_attachment" colour="white"/>
		</container>


	</container>

	<!-- teams left to draw for a cup stage -->
	<widget class="comp_teams_to_draw_panel" file="" id="ctdp" hidn="true" ddcw="true" dabc="true" height="205" use_horizontal_layout="true" appearance="">

		<attachment_group class="horizontal_arrange" horizontal_alignment="fill" horizontal_offset="0" horizontal_gap="12" vertical_alignment="vertical" vertical_inset="0" />

		<widget class="simple_data_list" id="colu" alignment="horizontal,fill" gap="12" colour="white">
			<record id="widget_properties" class="property_list_viewer_xml_panel" file="competition/competition stage cup draw teams to draw column icons" colour="white"/>

		</widget>

	</widget>

</panel>
