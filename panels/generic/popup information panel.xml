<panel>
	<layout class="vertical_arrange_horizontal_autosize" vertical_gap="8" vertical_alignment="middle"/>
	<attachment class="test_screen_size_attachment" skip_if_false="true">
		<list id="properties">
			<record>
				<flags id="alignment" value="vertical"/>
				<integer id="min_value" value="0" />
				<integer id="max_value" value="900"/>
				<symbol id="set_property" value="height" />
				<integer id="true_value" value="703" />
			</record>
			<record min_value="900" max_value="99999" true_value="834"/>
		</list>
	</attachment>
	<boolean id="should_force_refresh" value="true" />
	<container class="main_transparent_box_no_margin" width="650">
		<layout class="vertical_arrange_autosize" vertical_offset="8" horizontal_inset="8" vertical_gap="8"/>
		<!-- player/staff profile tabs -->
		<container id="tabs" height="50" hidden="true">
			<layout class="stick_to_sides_attachment" apply_to_children="true"/>
			<container>
				<layout class="horizontal_arrange" horizontal_alignment="fill" horizontal_gap="8"/>
				<layout class="stick_to_sides_attachment" alignment="vertical" apply_to_children="true"/>
				<record id="default_properties" colour="text" type="0" icon_enabled="false" show_button_appearance="true" appearance="buttons/custom/profiles/button" alignment="centre"/>
				<widget class="radio_button" id="plPr" selected="true" select_event="EPpS">
					<translation id="text" translation_id="491919" type="use" value="Player Profile"/>
				</widget>
				<widget class="radio_button" id="Sfpr" selected="false" select_event="ENpS">
					<translation id="text" translation_id="491920" type="use" value="Staff Profile"/>
				</widget>
			</container>
		</container>
		<container id="pict" class="plain_box" appearance="boxes/custom/interface/popup/paper" green_replacement="bg" width="680">
			<layout class="stick_to_sides_attachment" apply_to_children="true"/>
			<attachment class="test_screen_size_attachment" skip_if_false="true">
				<list id="properties">
					<record>
						<flags id="alignment" value="vertical"/>
						<integer id="min_value" value="0" />
						<integer id="max_value" value="900"/>
						<symbol id="set_property" value="height" />
						<integer id="true_value" value="645" />
					</record>
					<record min_value="900" max_value="99999" true_value="776"/>
				</list>
			</attachment>
			<!-- player profile -->
			<container id="prof">
				<layout class="stick_to_sides_attachment" apply_to_children="true"/>
			</container>
			<!-- staff profile -->
			<container id="prf2">
				<layout class="stick_to_sides_attachment" apply_to_children="true"/>
			</container>
		</container>
	</container>

</panel>