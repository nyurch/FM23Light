				</widget>
			</container>
			
			<widget class="spacer"/>
			
		</container>
		
		<!-- Title -->
		<container height="45">
			<attachment_group class="vertical_arrange" vertical_layout="-1" vertical_gap="0" />

			<widget id="mttl" class="label" alignment="centre_x,centre_y" font="title" size="30" colour="white"/>
