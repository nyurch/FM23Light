<!-- image properties -->
<properties>

	<!-- image borders -->
	<!-- these determine how many pixels any content is inset from each side of the image -->
	<!-- (for example, in the case of a button, the content would be the text label) -->
	<record id="image_borders" left="8" right="24" top="1" bottom="2"/>

	<!-- image slices determine the points at which the image will be sliced to enable scaling -->
	<!-- the image will only slice in the directions slicing values are provided for-->
	<record id="image_slices" left="3" right="23"/>

	<colour id="red_replacement" name="teal 900"/>
	<colour id="blue_replacement" name="teal 90"/>
	<colour id="green_replacement" name="teal 900"/>

	<record id="font_spec">
		<flags id="alignment" value="right,centre_y"/>
		<flags id="size" value="normal"/>
		<flags id="colour" value="teal 900"/>
	</record>

</properties>
